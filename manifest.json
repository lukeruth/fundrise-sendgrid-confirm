{
	"manifest_version": 2,

	"name": "SendGrid Confirm",
	"description": "Fixing something that shouldn't be broken.",
	"version": "1.0",
	"permissions": [
		"activeTab"
	],
	"browser_action": {
		"default_title": "Confirm Send in SendGrid",
		"default_icon": "images/warning-logo.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [{
		"matches": ["https://sendgrid.com/marketing_campaigns/campaigns/*/edit"],
		"js": ["js/jquery-3.1.0.min.js", "js/confirm.js"]
	}]
}